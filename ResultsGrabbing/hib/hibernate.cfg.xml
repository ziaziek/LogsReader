<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
  <property name="hibernate.connection.password">derek</property>
  <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/tennis</property>
  <property name="hibernate.connection.username">tennis_user</property>
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="hibernate.generate_statistics">true</property>
  <property name="hibernate.transaction.auto_close_session">true</property>
  <property name="hibernate.default_entity_mode">dynamic-map</property>
  <mapping package="data"/>
 </session-factory>
</hibernate-configuration>
